import kotlin.collections.List;
import kotlinx.datetime.LocalDateTime;

CREATE TABLE CoffeeTable(
    id INTEGER AS Int PRIMARY KEY,
    name TEXT,
    description TEXT,
    amount INTEGER NOT NULL,
    createdAt TEXT AS LocalDateTime NOT NULL,
    rating INTEGER AS Int,
    userId INTEGER AS Int NOT NULL,
    syrups TEXT AS List<Int>
);

addCoffee:
INSERT INTO CoffeeTable(amount, createdAt, userId)
VALUES (:amount, :createdAt, :userId);

addCoffeeWithName:
INSERT INTO CoffeeTable(name, amount, createdAt, userId)
VALUES (:name, :amount, :createdAt, :userId);

setCoffeeRatingById:
