SET rating = :newRating
WHERE id = :id;

setCoffeeSyrupById:
UPDATE CoffeeTable
SET syrups = :syrups
WHERE id = :id;

getCoffeeByUserId:
SELECT *
FROM CoffeeTable
WHERE userId = :userId;